<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="sot.hobbyapp.FrontPageActivity"
    android:id="@+id/relative_background">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/hobby0"
                android:layout_marginBottom="3dp"
                android:id="@+id/golf"
                android:onClick="launchHobby"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/hobby1"
                android:layout_marginBottom="3dp"
                android:id="@+id/wind_surfing"
                android:onClick="launchHobby"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/hobby2"
                android:id="@+id/boxing"
                android:onClick="launchHobby"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/paddle"
                android:background="@drawable/hobby3"
                android:onClick="launchHobby"
                android:layout_marginBottom="3dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/hobby0"
                android:layout_marginBottom="3dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/hobby1"
                android:layout_marginBottom="3dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/hobby2"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/hobby3"
                android:layout_marginBottom="3dp"/>




        </LinearLayout>





   </ScrollView>

</LinearLayout>
